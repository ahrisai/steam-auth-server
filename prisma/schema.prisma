generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  nickname     String
  email        String
  password     String
  gender       String
  user_avatar  String?
  description  String?
  birthday     String
  valorant_data Valorant_Data? 
  csgo_data     Csgo_data?
  teams         Team[]
}

model Valorant_Data {
  id           Int    @id @default(autoincrement())
  user         User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       Int    @unique
  
}

model Csgo_data {
  id           Int    @id @default(autoincrement())
  user         User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       Int    @unique
  
  steamId      String
  matches      Int
  winrate      Float
  kd           Float
  wins         Int
  hs           Float
  lvlImg       String
  elo Int
}

model Team {
  id     Int   @id @default(autoincrement())
  user   User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int @unique 
  
}





